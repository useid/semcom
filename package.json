{
  "name": "@digita-ai/semcom",
  "version": "0.0.12",
  "description": "",
  "main": "index.js",
  "scripts": {
    "bootstrap": "npm ci && lerna bootstrap --ignore-prepublish",
    "bootstrap:no-ci": "npm i && lerna bootstrap --no-ci --ignore-prepublish",
    "build": "lerna run build",
    "lint": "lerna run lint --parallel",
    "lint:fix": "lerna run lint:fix --parallel",
    "start": "lerna run start --parallel",
    "release": "npm run release:docs && npm run release:version",
    "release:docs": "echo \"$(yaml set docs/antora.yml version $(dot-json package.json version))\" > docs/antora.yml",
    "release:version": "lerna version --exact --conventional-commits -m 'chore: release %s' --force-publish --tag-version-prefix='' --no-granular-pathspec",
    "test": "lerna run test --parallel",
    "test:ci": "lerna run test:ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digita-ai/semcom.git"
  },
  "author": "Wouter Janssens",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/digita-ai/semcom/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run bootstrap && npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "homepage": "https://github.com/digita-ai/semcom#readme",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/config-lerna-scopes": "^11.0.0",
    "@types/jest": "^26.0.20",
    "@types/mocha": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "dot-json": "^1.2.2",
    "eslint": "^7.16.0",
    "husky": "^4.3.6",
    "lerna": "^3.22.1",
    "typescript": "^4.1.3",
    "yaml-cli": "^1.1.8"
  }
}
