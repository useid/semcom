{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "lib": [
          "es2020",
          "dom"
        ],
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist",
        "typeRoots": [
            "node_modules/@types",
        ],
        "downlevelIteration": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "moduleResolution": "node"
    },
    "include": [
        "lib"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "dist"
    ]
}
